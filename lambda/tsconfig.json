{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "lib": ["ES2022"],
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "outDir": "../lambda-build",
    "types": ["node", "aws-lambda"],
    "skipLibCheck": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["../node_modules", "../lambda-build"]
}
